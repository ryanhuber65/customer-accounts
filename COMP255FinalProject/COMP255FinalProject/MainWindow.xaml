               Content=""
               HorizontalAlignment="Left"
               Margin="92,423,0,0"
               VerticalAlignment="Top"
               Width="494" />
        <Label x:Name="errorMessageLabelTransaction"
               Content=""
               HorizontalAlignment="Left"
               Margin="61,752,0,0"
               VerticalAlignment="Top"
               Width="565" />

